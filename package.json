{
  "name": "frostfire-gateway",
  "version": "1.0.0",
  "description": "Load balancer gateway for Frostfire Forge game servers",
  "module": "gateway-server.ts",
  "scripts": {
    "start": "ENV_FILE=.env.production bun run start.ts",
    "start-dev": "ENV_FILE=.env.development bun run start.ts",
    "start-gateway": "bun --env-file=.env.production gateway-server.ts",
    "start-webserver": "bun run transpile-production && bun --env-file=.env.production webserver.ts",
    "transpile-production": "bun --env-file=.env.production ./utility/transpiler.ts",
    "dev": "bun --watch --env-file=.env.production gateway-server.ts",
    "dev-webserver": "bun --watch --env-file=.env.production webserver.ts",
    "create-config": "bun --env-file=.env.production run ./utility/create-config.ts"
  },
  "keywords": [
    "gateway",
    "load-balancer",
    "game-server"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bun": "^1.3.8",
    "@types/node": "^25.2.2"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "type": "module",
  "private": true,
  "dependencies": {
    "@types/nodemailer": "^7.0.9",
    "nodemailer": "^8.0.1"
  }
}
