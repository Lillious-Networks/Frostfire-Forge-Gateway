# Gateway Server Configuration

# HTTP Port (default: 80)
WEBSRV_PORT=80

# HTTPS/SSL Port (default: 443)
WEBSRV_PORTSSL=443

# WebSocket Port (default: 9000)
WS_PORT=9000

# Enable SSL/TLS (true/false or 1/0)
WEBSRV_USESSL=false

# SSL Certificate paths (only needed if WEBSRV_USESSL=true)
WEBSRV_CERT_PATH=./cert.pem
WEBSRV_KEY_PATH=./key.pem

# Gateway Authentication Key (required)
# This should match the GATEWAY_AUTH_KEY used by game servers to register
GATEWAY_AUTH_KEY=change-this-secret-key

# Heartbeat interval in milliseconds (default: 1000)
HEARTBEAT_INTERVAL=1000

# Server timeout in milliseconds (default: 3000)
SERVER_TIMEOUT=3000

# Session timeout in milliseconds (default: 1800000 - 30 minutes)
SESSION_TIMEOUT=1800000
